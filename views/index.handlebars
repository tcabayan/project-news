<div class="title-container animated fadeIn">
  <h1>ARTICLES</h1>
</div>

<div class="grid" id="article-container">
    <div class="grid-x grid-margin-x grid-margin-y">
    {{#if articles}}
      {{#each articles}}
        {{#unless saved}}
          <div class="cell medium-3  small-6 x-small-12">
            <div class="card animated tada" data-id={{_id}} style="width: 300px;">
              <p><button class="button expanded" data-open="exampleModal1{{_id}}">Add Note</button></p>
                
                <div class="reveal" id="exampleModal1{{_id}}" data-reveal>
                  <div class="note-container">
                    <p><button class="button expanded" id="show-notes" data-id={{_id}}>Show Note</button></p>
                    <h2>NOTES: </h2><div id="note-holder" data-id={{_id}}></div>
                  </div>
                  <input class="titleinput" type="text" value="" placeholder="Enter Title">
                  <input class="bodyinput" type="text" value="" placeholder="Enter Note">
                  <div class="button" value="submit" id="savenote" data-id="{{_id}}" data-close>Submit</div>
                  <div class="button float-right" value="delete" id="delete-note" data-id="{{_id}}" data-close>Delete</div>
                  <button class="close-button" data-close aria-label="Close modal" type="button">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="card-divider">
                    <h4><a href="{{link}}">{{title}}</a></h4>
                </div>
                {{#if note}}
                  <p>{{note.body}}</p>
                {{/if}}
                <div class="button save-article" data-id="{{_id}}">
                  <span>Save</span>
                </div>
            </div>
        </div>
        {{/unless}}
      {{/each}}
      {{else}}
        <div class="nothing-here-container title-container animated fadeIn">
          <h1>Oh no! There are no articles here. Please scrape new ones.</h1>
        </div>
    {{/if}}
    </div>
</div>



